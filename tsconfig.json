{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "./build",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "environment.d.ts"
  ],
  "exclude": [
    "src/**/*!{types}.[spec|test].ts",
    "**/*.js",
    "src/types.ts"
  ]
}
